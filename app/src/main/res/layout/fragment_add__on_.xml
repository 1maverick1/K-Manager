<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kpchuck.k_klock.Fragments.StatusBar_Add_On_Fragment"
    android:id="@+id/statusBarAddOnFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/statusbarAddOnHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="StatusBar Add-Ons"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/statusbarAddOnHeader"
            android:text="Move Network Icons to the Left"
            android:id="@+id/moveNetworkLeft"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/moveNetworkLeft"
            android:text="Show Am/Pm in Stock Clock"
            android:id="@+id/ampm"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ampm"
            android:text="Network Signal Indicators"
            android:id="@+id/networkSignalIndicatorSwitch"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/networkSignalIndicatorSwitch"
            android:text="Hide StatusBar on Lockscreen"
            android:id="@+id/hideStatusbar"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/hideStatusbar"
            android:text="Theme StatusBar and Stock Clock Color"
            android:id="@+id/colorIcons"/>





    </RelativeLayout>


</android.support.v7.widget.CardView>
